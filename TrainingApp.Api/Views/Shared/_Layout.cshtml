
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - PersonalApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">PersonalApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Strona główna</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="traineesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Podopieczni
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="traineesDropdown">
                                <li><a class="dropdown-item" asp-controller="Trainee" asp-action="AllTrainees">Wyświetl wszystkich</a></li>
                                <li><a class="dropdown-item" asp-controller="Trainee" asp-action="AddTrainee">Dodaj podopiecznego</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="trainingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Treningi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="trainingsDropdown">
                                <li><a class="dropdown-item" asp-controller="Training" asp-action="AddTraining">Dodaj trening</a></li>
                                <li><a class="dropdown-item" asp-controller="Training" asp-action="ShowCalendar">Pokaż kalendarz</a></li>
                                <li><a class="dropdown-item" asp-controller="Training" asp-action="ShowExercises">Pokaż ćwiczenia</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="nav-link btn btn-link">Wyloguj</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Zaloguj</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4 flex-grow-1">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <p>© @DateTime.Now.Year PersonalApp. Wszystkie prawa zastrzeżone.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
