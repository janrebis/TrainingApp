@{
    ViewBag.Title = "Strona główna";
}

<div class="text-center py-5">
    <h1 class="display-4">Witaj w PersonalApp!</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <p class="lead">Zalogowany jako: @User.Identity.Name</p>
        <a asp-controller="Trainee" asp-action="AllTrainees" class="btn btn-primary btn-lg mt-3">Przeglądaj podopiecznych</a>
    }
    else
    {
        <p class="lead">Zarządzaj swoimi podopiecznymi w prosty sposób.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg mt-3">Zaloguj się</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg mt-3">Zarejestruj się</a>
    }
</div>